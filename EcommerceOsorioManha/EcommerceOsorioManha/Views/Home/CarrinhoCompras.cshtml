@model IEnumerable<EcommerceOsorioManha.Models.ItemVenda>

@{
    ViewBag.Title = "CarrinhoCompras";
}

<h2>CarrinhoCompras</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Imagem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            SubTotal
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Imagens/@item.Produto.Imagem" alt="Imagem" style="width:100px" />
        </td>
        <td>
            @item.Quantidade
        </td>
        <td>
            @item.Preco.ToString("C2")
        </td>
        <td>
            @item.Data
        </td>
        @{
            double subTotal = (item.Quantidade * item.Preco);
        }
        <td>
            @subTotal
        </td>
        <td>
        <td>
            <b> @Html.ActionLink("Remover", "RemoverItem", "Home", new { id = item.ItemVendaId }, null)  </b>  </td>
        </td>
    </tr>
}

</table>
