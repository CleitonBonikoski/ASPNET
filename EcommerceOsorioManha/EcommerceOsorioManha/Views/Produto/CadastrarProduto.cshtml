@model EcommerceOsorioManha.Models.Produto

<div>
    @using (Html.BeginForm("CadastrarProduto", "Produto", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            <legend>CadastrarProduto</legend>
            <div class="form-group">
                @*or form-inline*@
                @Html.Label("Nome Do Produto", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome do Produto" })<br />
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Descrição", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Descricao,new { @class = "form-control", @placeholder = "Descrição do Produto" })<br />
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Preço", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Preco, new { @class = "form-control", @placeholder = "Preço do Produto" })<br />
                </div>
            </div><div class="form-group">
                @Html.Label("Categoria", new { @class = "control-label col-sm-2" })

                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Categoria, new { @class = "form-control", @placeholder = "Categoria do Produto" })<br />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
        </fieldset>
    }
</div>
