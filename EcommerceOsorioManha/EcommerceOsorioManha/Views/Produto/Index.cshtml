
@{
    Layout = null;

    DateTime data = ViewBag.Data;
    List<EcommerceOsorioManha.Models.Produto> produtos = ViewBag.Produtos;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Gerenciamento de Produtos</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
       @Html.ActionLink("Ecommerce - UP", "Index", "Produto",null, new { @class="navbar-brand" })

    </nav>

    <div id="Content" class="container" style="margin-top:30px">
        <h2>Gerenciamento de Produtos</h2>

        @*<a href="~/Views/Produto/Cadastra"> Cadastrar Produto </a>*@

        @* Link em MVC Razor *@

        @data <br>

        @Html.ActionLink("Cadastrar Produto", "CadastrarProduto", "Produto")

        <table>
            <tr>
                <th>Nome  </th>
                <th>Descrição  </th>
                <th>Preço  </th>
                <th>Categoria  </th>
            </tr>
            @if (produtos != null)
            {
                foreach (EcommerceOsorioManha.Models.Produto ProdutoCadastrado in produtos)
                {
                    <tr>
                        <td>@ProdutoCadastrado.Nome</td>
                        <td>@ProdutoCadastrado.Descricao</td>
                        <td>@ProdutoCadastrado.Preco</td>
                        <td>@ProdutoCadastrado.Categoria</td>
                        <td>@Html.ActionLink("Remover", "RemoverProduto", "Produto", new { id = ProdutoCadastrado.ProdutoId }, null)</td>
                        <td>@Html.ActionLink("Alterar", "AlterarProduto", "Produto", new { Id = ProdutoCadastrado.ProdutoId }, null)</td>
                    </tr>

                }

            }

        </table>
    </div>


    <footer style="text-align:center; margin-top:100px">
        <hr />
        <p>&copy; @DateTime.Now.Year - Desenvolvido por Cleiton</p>

    </footer>

</body>
</html>
