@using EcommerceOsorioManha.Models
@model EcommerceOsorioManha.Models.Produto

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    Produto produto = ViewBag.ProdutoAlteracao;
}

    <h1>Alterar Produto</h1>
    <div>
            @using (Html.BeginForm())
            {
                <fieldset>
                    @Html.Hidden("TxtId", produto.ProdutoId)

                    @Html.Label("ID Do Produto")
                    @Html.TextBox("txtNome", produto.ProdutoId, new { @disabled = ""})<br />

                    @Html.Label("Nome Do Produto")
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome do Produto" })<br />
                    

                    @Html.Label("Descrição")
                    @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", @placeholder = "Nome do Produto" })<br />

                    @Html.Label("Preço")
                    @Html.TextBoxFor(model => model.Preco, new { @class = "form-control", @placeholder = "Nome do Produto" })<br />


                    @Html.Label("Categoria")
                    @Html.TextBoxFor(model => model.Categoria, new { @class = "form-control", @placeholder = "Nome do Produto" })<br />


                    <input type="submit" value="Salvar" />
                </fieldset>
            }       
       
    </div>

