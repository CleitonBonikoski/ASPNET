@using EcommerceOsorioManha.Models;

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    Produto produto = ViewBag.ProdutoAlteracao;
}

    <h1>Alterar Produto</h1>
    <div>
            @using (Html.BeginForm())
            {
                <fieldset>
                    @Html.Hidden("TxtId", produto.ProdutoId)

                    @Html.Label("ID Do Produto")
                    @Html.TextBox("txtNome", produto.ProdutoId, new { @disabled = ""})<br />

                    @Html.Label("Nome Do Produto")
                    @Html.TextBox("txtNome", produto.Nome)<br />

                    @Html.Label("Descrição")
                    @Html.TextBox("txtDescricao", produto.Descricao)<br />

                    @Html.Label("Preço")
                    @Html.TextBox("txtPreco", produto.Preco)<br />

                    @Html.Label("Categoria")
                    @Html.TextBox("txtCategoria", produto.Categoria)<br />

                    <input type="submit" value="Salvar" />
                </fieldset>
            }       
       
    </div>

